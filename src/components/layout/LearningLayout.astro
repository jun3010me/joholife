---
export interface Props {
  title: string;
  description?: string;
  chapter: string;
  slideNumber: number;
  totalSlides: number;
  estimatedTime?: number;
}

const { title, description, chapter, slideNumber, totalSlides, estimatedTime } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="total-slides" content={totalSlides.toString()}>
    <meta name="estimated-time" content={estimatedTime.toString()}>
    <meta name="chapter" content={chapter}>
    <meta name="slide-number" content={slideNumber.toString()}>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Noto+Sans+JP:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="learning-body">
  <!-- „Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥ -->
  <nav class="learning-nav">
    <div class="nav-container">
      <a href="/" class="nav-brand">üìö „Åò„Çá„ÅÜ„Åª„ÅÜ„Çâ„ÅÑ„Åµ</a>
      <a href="/lessons" class="nav-link">üìñ „É¨„ÉÉ„Çπ„É≥‰∏ÄË¶ß</a>
    </div>
  </nav>

  <!-- „É°„Ç§„É≥„Ç≥„É≥„ÉÜ„É≥„ÉÑ -->
  <div class="learning-wrapper">
    <main class="learning-main">
      <div class="learning-card">
        <div class="learning-content">
          <slot />
        </div>
      </div>
    </main>
  </div>

  <style is:global>
    /* „É™„Çª„ÉÉ„Éà„Å®„Éô„Éº„Çπ„Çπ„Çø„Ç§„É´ */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* „Éú„Éá„Ç£ */
    .learning-body {
      font-family: 'Inter', 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.6;
      color: #374151;
      background: #f9fafb;
      min-height: 100vh;
    }

    /* „Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥ */
    .learning-nav {
      background: white;
      border-bottom: 1px solid #e5e7eb;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .nav-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
      height: 4rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .nav-brand {
      font-weight: 700;
      font-size: 1.125rem;
      color: #3b82f6;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .nav-brand:hover {
      color: #1d4ed8;
    }

    .nav-link {
      color: #6b7280;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .nav-link:hover {
      color: #3b82f6;
    }

    /* „É°„Ç§„É≥„É¨„Ç§„Ç¢„Ç¶„Éà */
    .learning-wrapper {
      min-height: calc(100vh - 4rem);
      padding: 2rem 1rem;
    }

    .learning-main {
      max-width: 900px;
      margin: 0 auto;
    }

    .learning-card {
      background: white;
      border-radius: 1rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      border: 1px solid #e5e7eb;
      overflow: hidden;
    }

    .learning-content {
      padding: 3rem;
      line-height: 1.7;
    }

    /* „Çø„Ç§„Éù„Ç∞„É©„Éï„Ç£ */
    .learning-content h1 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 2rem;
      line-height: 1.2;
      border-bottom: 4px solid #3b82f6;
      padding-bottom: 1rem;
    }

    .learning-content h2 {
      font-size: 2rem;
      font-weight: 600;
      color: #1f2937;
      margin-top: 3rem;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .learning-content h3 {
      font-size: 1.5rem;
      font-weight: 600;
      color: #374151;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
    }

    .learning-content h4 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #4b5563;
      margin-top: 2rem;
      margin-bottom: 0.75rem;
    }

    .learning-content p {
      color: #374151;
      line-height: 1.8;
      margin-bottom: 1.5rem;
      font-size: 1rem;
    }

    .learning-content strong {
      font-weight: 700;
      color: #111827;
    }

    .learning-content em {
      font-style: italic;
      color: #4b5563;
    }

    /* „É™„Çπ„Éà */
    .learning-content ul {
      list-style-type: disc;
      padding-left: 2rem;
      margin-bottom: 1.5rem;
    }

    .learning-content ol {
      list-style-type: decimal;
      padding-left: 2rem;
      margin-bottom: 1.5rem;
    }

    .learning-content li {
      margin-bottom: 0.75rem;
      line-height: 1.7;
      color: #374151;
    }

    .learning-content ul > li::marker {
      color: #3b82f6;
    }

    .learning-content ol > li::marker {
      color: #3b82f6;
    }

    /* „Ç≥„Éº„Éâ */
    .learning-content code {
      background-color: #f3f4f6;
      color: #e11d48;
      padding: 0.25rem 0.5rem;
      border-radius: 0.375rem;
      font-size: 0.875rem;
      font-family: 'JetBrains Mono', 'Fira Code', 'Courier New', monospace;
      font-weight: 500;
    }

    .learning-content pre {
      background-color: #1f2937;
      color: #f9fafb;
      padding: 1.5rem;
      border-radius: 0.75rem;
      overflow-x: auto;
      margin: 2rem 0;
      font-family: 'JetBrains Mono', 'Fira Code', 'Courier New', monospace;
      font-size: 0.875rem;
      line-height: 1.6;
      border: 1px solid #374151;
    }

    .learning-content pre code {
      background: transparent;
      color: inherit;
      padding: 0;
      border-radius: 0;
    }

    /* „ÉÜ„Éº„Éñ„É´ */
    .learning-content table {
      width: 100%;
      border-collapse: collapse;
      margin: 2rem 0;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
      border-radius: 0.75rem;
      overflow: hidden;
    }

    .learning-content th,
    .learning-content td {
      border: 1px solid #e5e7eb;
      padding: 1rem;
      text-align: left;
    }

    .learning-content th {
      background-color: #f3f4f6;
      font-weight: 700;
      color: #111827;
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .learning-content td {
      color: #374151;
      background-color: white;
    }

    .learning-content tr:nth-child(even) td {
      background-color: #f9fafb;
    }

    .learning-content tr:hover td {
      background-color: #f3f4f6;
    }

    /* ÂºïÁî® */
    .learning-content blockquote {
      border-left: 4px solid #3b82f6;
      background-color: #eff6ff;
      margin: 2rem 0;
      padding: 1.5rem;
      border-radius: 0.5rem;
      color: #1e40af;
      font-style: italic;
    }

    /* „É™„É≥„ÇØ */
    .learning-content a {
      color: #3b82f6;
      text-decoration: underline;
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .learning-content a:hover {
      color: #1d4ed8;
    }

    /* Âå∫Âàá„ÇäÁ∑ö */
    .learning-content hr {
      border: none;
      height: 2px;
      background: linear-gradient(to right, #3b82f6, #06b6d4);
      margin: 3rem 0;
      border-radius: 1px;
    }

    /* „É¨„Çπ„Éù„É≥„Ç∑„Éñ */
    @media (max-width: 768px) {
      .learning-wrapper {
        padding: 1rem;
      }

      .learning-content {
        padding: 2rem 1.5rem;
      }

      .learning-content h1 {
        font-size: 2rem;
      }

      .learning-content h2 {
        font-size: 1.5rem;
        margin-top: 2rem;
      }

      .learning-content h3 {
        font-size: 1.25rem;
        margin-top: 1.5rem;
      }

      .learning-content pre {
        padding: 1rem;
        margin: 1.5rem 0;
        font-size: 0.8rem;
      }
    }
  </style>
</body>
</html>