        // RDAPデータをWhois形式に変換
        function convertRdapToWhoisFormat(rdapData) {
            const converted = {
                domain: rdapData.ldhName || rdapData.handle,
                domain_name: rdapData.ldhName || rdapData.handle,
                registrar: {},
                nameservers: [],
                status: []
            };

            // 登録者情報
            if (rdapData.entities) {
                rdapData.entities.forEach(entity => {
                    if (entity.roles && entity.roles.includes('registrar')) {
                        converted.registrar = {
                            name: entity.vcardArray?.[1]?.[1]?.[3] || entity.handle || 'Unknown',
                            iana_id: entity.publicIds?.[0]?.identifier || '',
                            url: entity.links?.[0]?.href || ''
                        };
                    }
                });
            }

            // 日付情報
            if (rdapData.events) {
                rdapData.events.forEach(event => {
                    switch (event.eventAction) {
                        case 'registration':
                            converted.creation_date = event.eventDate;
                            break;
                        case 'expiration':
                            converted.expiry_date = event.eventDate;
                            break;
                        case 'last changed':
                        case 'last update of RDAP database':
                            converted.updated_date = event.eventDate;
                            break;
                    }
                });
            }

            // ネームサーバー
            if (rdapData.nameservers) {
                converted.nameservers = rdapData.nameservers.map(ns => ns.ldhName || ns.objectClassName);
            }

            // ステータス
            if (rdapData.status) {
                converted.status = rdapData.status;
            }

            // ドメイン年数の計算
            if (converted.creation_date) {
                const creationDate = new Date(converted.creation_date);
                const now = new Date();
                converted.domain_age = Math.floor((now - creationDate) / (1000 * 60 * 60 * 24));
            }

            return converted;
        }

        // 統合検索関数（WhoisまたはRDAP）
        async function performLookup(domain) {
            // 既存のリクエストをキャンセル
            if (currentRequest) {
                currentRequest.abort();
            }

            // 検索ドメインを保存
            currentSearchDomain = domain;

            hideAll();
            loading.style.display = 'block';
            loadingText.textContent = currentProtocol === 'rdap' ? 'RDAP情報を取得中...' : 'Whois情報を取得中...';

            try {
                // AbortControllerを作成
                const controller = new AbortController();
                currentRequest = controller;

                let data;
                if (currentProtocol === 'rdap') {
                    // RDAP検索
                    data = await performRdapLookup(domain);
                    displayRdapInfo(data);
                } else {
                    // Whois検索
                    data = await performWhoisLookup(domain);
                    displayWhoisInfo(data);
                }

            } catch (error) {
                console.error('検索エラー:', error);

                // AbortErrorの場合は何もしない（ユーザーがキャンセルした）
                if (error.name === 'AbortError') {
                    return;
                }

                // RDAP失敗時はWhoisにフォールバック
                if (currentProtocol === 'rdap') {
                    console.log('RDAPに失敗、Whoisにフォールバック');

                    // 日本ドメインの場合は特別なメッセージ
                    let errorNote;
                    if (domain.endsWith('.jp') || domain.includes('.co.jp') || domain.includes('.or.jp')) {
                        errorNote = `RDAP検索に失敗しました (${error.message})。日本のドメインではRDAPサーバーの対応が限定的な場合があります。Whoisデータで代替表示しています。`;
                    } else {
                        errorNote = `RDAP検索に失敗しました (${error.message})。Whoisデータで代替表示しています。`;
                    }

                    try {
                        const whoisData = await performWhoisLookup(domain);
                        whoisData._note = errorNote;
                        displayWhoisInfo(whoisData);
                    } catch (whoisError) {
                        // Whoisも失敗した場合はモックデータ
                        try {
                            const mockData = generateMockWhoisData(domain);
                            mockData._fallback = true;
                            mockData._rdap_attempted = true;
                            mockData._note = `RDAP・Whois検索ともに失敗しました。RDAPは新しいプロトコルのため、一部のドメインやネットワーク環境では制限がある場合があります。これは教育・デモ用のサンプルデータです。`;
                            displayWhoisInfo(mockData);
                        } catch (mockError) {
                            showError(`検索エラー: ${error.message}`);
                        }
                    }
                } else {
                    // Whois検索失敗時は既存のフォールバック処理
                    try {
                        const mockData = generateMockWhoisData(domain);
                        mockData._fallback = true;
                        mockData._note = `実際のAPI呼び出しに失敗しました (${error.message})。これは教育・デモ用のサンプルデータです。`;
                        displayWhoisInfo(mockData);
                    } catch (mockError) {
                        showError(`検索エラー: ${error.message}`);
                    }
                }
            } finally {
                currentRequest = null;
            }
        }

        // Whois検索の実行（内部関数）
        async function performWhoisLookup(domain) {
            // IP2WHOIS APIをCORSプロキシ経由で呼び出し
            const container = document.querySelector('.whois-container');
            const whoisApiKey = container.dataset.apiKey || 'demo';
            const originalApiUrl = `https://api.ip2whois.com/v2?key=${whoisApiKey}&domain=${encodeURIComponent(domain)}&format=json`;
            const proxyUrl = `https://api.allorigins.win/get?url=${encodeURIComponent(originalApiUrl)}`;

            console.log('CORSプロキシ経由でAPI呼び出し中:', originalApiUrl);

            const response = await fetch(proxyUrl, {
                method: 'GET',
                signal: currentRequest.signal
            });

            if (!response.ok) {
                throw new Error(`Proxy Error: ${response.status} ${response.statusText}`);
            }

            const proxyData = await response.json();
            console.log('プロキシ応答:', proxyData);

            // プロキシからの実際のデータを抽出
            const data = JSON.parse(proxyData.contents);
            console.log('API応答:', data);

            // エラーレスポンスをチェック
            if (data.error_message) {
                throw new Error(data.error_message);
            }

            return data;
        }

