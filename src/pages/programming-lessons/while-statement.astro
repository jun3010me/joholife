import Layout from '../../layouts/Layout.astro';

const title = "while文 - プログラミングレッスン";
const description = "Pythonのwhile文について、条件による繰り返し処理を段階的に学習します";

const steps = [
    {
        id: 1,
        title: 'while文の基本',
        description: 'while文を使うと、条件が真の間、繰り返し処理を実行できます。for文と違い、回数が決まっていない繰り返しに便利です。',
        code: 'i = 1\nwhile i <= 5:\n    print(i)\n    i = i + 1',
        explanation: 'while文は「〜の間」という意味です。i <= 5が真の間、インデントされた部分が繰り返されます。i = i + 1で変数を更新しないと、無限ループになるので注意が必要です。'
    },
    {
        id: 2,
        title: 'カウントダウン',
        description: 'while文を使って、数を減らしていくカウントダウンを作ってみましょう。',
        code: 'count = 5\nwhile count > 0:\n    print(count)\n    count = count - 1\nprint("発射！")',
        explanation: 'count > 0が真の間、繰り返します。count = count - 1で値を1ずつ減らしていき、countが0になったら繰り返しが終わります。ループの外でprint("発射！")を実行します。'
    },
    {
        id: 3,
        title: '合計値の計算',
        description: 'while文を使って、1から指定した数までの合計を計算してみましょう。',
        code: 'total = 0\ni = 1\nwhile i <= 10:\n    total = total + i\n    i = i + 1\nprint(total)',
        explanation: '変数totalに値を足していき、iを1ずつ増やします。i <= 10が偽になったら繰り返しが終わり、1から10までの合計（55）が表示されます。'
    },
    {
        id: 4,
        title: '条件が満たされるまで繰り返す',
        description: 'while文は、特定の条件が満たされるまで繰り返すことができます。これはfor文にはない特徴です。',
        code: 'password = ""\nwhile password != "1234":\n    password = input("パスワード: ")\nprint("ログイン成功")',
        explanation: 'パスワードが正しく入力されるまで、何度でも入力を求めます。password != "1234"が真の間、繰り返されます。正しいパスワードが入力されたら繰り返しが終わります。'
    },
    {
        id: 5,
        title: 'break文で途中で抜ける',
        description: 'break文を使うと、while文の繰り返しを途中で終了できます。',
        code: 'i = 1\nwhile i <= 10:\n    print(i)\n    if i == 5:\n        break\n    i = i + 1',
        explanation: 'breakを実行すると、その時点でwhile文から抜け出します。この例では、iが5になったときにbreakが実行されるので、1から5までが表示されます。'
    },
    {
        id: 6,
        title: 'continue文で次の繰り返しへ',
        description: 'continue文を使うと、その回の処理をスキップして次の繰り返しに進めます。',
        code: 'i = 0\nwhile i < 5:\n    i = i + 1\n    if i == 3:\n        continue\n    print(i)',
        explanation: 'continueを実行すると、その後の処理をスキップして次の繰り返しに進みます。この例では、iが3のときにcontinueが実行されるので、3以外（1, 2, 4, 5）が表示されます。'
    },
    {
        id: 7,
        title: '無限ループとbreak',
        description: 'while Trueで無限ループを作り、breakで抜け出す方法を学びます。メニュー選択などでよく使われます。',
        code: 'while True:\n    ans = input("続ける？(y/n): ")\n    if ans == "n":\n        break\n    print("続行中...")\nprint("終了")',
        explanation: 'while Trueは常に真なので、無限に繰り返します。breakがないと永遠に終わらないので注意が必要です。ユーザーが"n"と入力するまで繰り返し、"n"が入力されたらbreakで抜け出します。'
    },
    {
        id: 8,
        title: '数値の累積入力',
        description: '0が入力されるまで数値を入力し続け、その合計を計算します。',
        code: 'total = 0\nwhile True:\n    num = int(input("数値(0で終了): "))\n    if num == 0:\n        break\n    total = total + num\nprint(total)',
        explanation: '無限ループの中で数値を入力し、0が入力されたらbreakで終了します。0以外の数値はtotalに加算されます。入力回数が決まっていない場合に便利なパターンです。'
    },
    {
        id: 9,
        title: '値の範囲チェック',
        description: '正しい範囲の値が入力されるまで繰り返し入力を求めます。',
        code: 'score = -1\nwhile score < 0 or score > 100:\n    score = int(input("点数(0-100): "))\n    if score < 0 or score > 100:\n        print("エラー")\nprint(score)',
        explanation: '点数が0から100の範囲外の間、繰り返します。正しい範囲の値が入力されるまで何度でも入力を求めることができます。これはfor文では実現できない処理です。'
    },
    {
        id: 10,
        title: '実践：数当てゲーム',
        description: 'while文を使って、数当てゲームを作ってみましょう。正解するまで繰り返します。',
        code: 'answer = 7\nwhile True:\n    guess = int(input("数を当てて: "))\n    if guess == answer:\n        print("正解！")\n        break\n    elif guess < answer:\n        print("もっと大きい")\n    else:\n        print("もっと小さい")',
        explanation: '無限ループの中で予想を入力し、正解したらbreakで終了します。不正解の場合はヒントを表示して繰り返します。正解するまで何度でも挑戦できるゲームになります。'
    }
];
