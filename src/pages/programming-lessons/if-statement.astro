import Layout from '../../layouts/Layout.astro';

const title = "if文 - プログラミングレッスン";
const description = "Pythonのif文について、条件分岐の基本から応用まで段階的に学習します";

const steps = [
    {
        id: 1,
        title: 'if文の基本',
        description: 'if文を使うと、条件によって処理を分けることができます。条件が正しい（真）ときだけ、インデントされた部分が実行されます。',
        code: 'age = 18\nif age >= 18:\n    print("成人です")',
        explanation: 'if文は「もし〜ならば」という意味です。条件（age >= 18）が真のとき、インデントされた部分（print文）が実行されます。インデント（字下げ）は4つの半角スペースまたはTabキーで作ります。'
    },
    {
        id: 2,
        title: 'if-else文',
        description: 'elseを使うと、条件が正しくない（偽）ときの処理も書くことができます。',
        code: 'tokuten = int(input("点数: "))\nif tokuten >= 50:\n    g = 1\nelse:\n    g = 0\nprint(g)',
        explanation: 'if文の条件が偽のとき、else:以下の処理が実行されます。このコードでは、50点以上なら1、未満なら0が表示されます。'
    },
    {
        id: 3,
        title: '比較演算子：等しい（==）',
        description: '==を使うと、2つの値が等しいかどうかを判定できます。',
        code: 'num = int(input("数値: "))\nif num == 10:\n    print("正解")\nelse:\n    print("不正解")',
        explanation: '==は「等しい」という意味です。=（代入）と間違えやすいので注意しましょう。num == 10は「numが10と等しい」という条件です。'
    },
    {
        id: 4,
        title: '比較演算子：等しくない（!=）',
        description: '!=を使うと、2つの値が等しくないかどうかを判定できます。',
        code: 'password = input("パスワード: ")\nif password != "1234":\n    print("エラー")\nelse:\n    print("OK")',
        explanation: '!=は「等しくない」という意味です。password != "1234"は「passwordが1234と等しくない」という条件です。'
    },
    {
        id: 5,
        title: '比較演算子：大小の比較',
        description: '>, <, >=, <=を使って、数値の大小を比較できます。',
        code: 'score = int(input("点数: "))\nif score >= 80:\n    print("優秀")\nelse:\n    print("普通")',
        explanation: '>（より大きい）、<（より小さい）、>=（以上）、<=（以下）という比較演算子があります。score >= 80は「scoreが80以上」という意味です。'
    },
    {
        id: 6,
        title: 'elif（複数の条件分岐）',
        description: 'elifを使うと、3つ以上の条件を判定できます。',
        code: 'score = int(input("点数: "))\nif score >= 80:\n    print("A")\nelif score >= 60:\n    print("B")\nelse:\n    print("C")',
        explanation: 'elifは「else if」の略で、最初のifが偽のときに次の条件を判定します。上から順に判定されるので、80点以上ならA、60点以上80点未満ならB、60点未満ならCになります。'
    },
    {
        id: 7,
        title: '論理演算子：and（かつ）',
        description: 'andを使うと、複数の条件が全て真のときだけ実行されます。',
        code: 'age = int(input("年齢: "))\nif age >= 13 and age <= 19:\n    print("10代")\nelse:\n    print("10代ではない")',
        explanation: 'andは「かつ」という意味で、両方の条件が真のときだけ全体が真になります。age >= 13 and age <= 19は「13歳以上かつ19歳以下」という意味です。'
    },
    {
        id: 8,
        title: '論理演算子：or（または）',
        description: 'orを使うと、複数の条件のうち1つでも真なら実行されます。',
        code: 'day = input("曜日: ")\nif day == "土" or day == "日":\n    print("休日")\nelse:\n    print("平日")',
        explanation: 'orは「または」という意味で、どちらか一方でも真なら全体が真になります。day == "土" or day == "日"は「土曜日または日曜日」という意味です。'
    },
    {
        id: 9,
        title: '論理演算子：not（否定）',
        description: 'notを使うと、条件の真偽を反転させることができます。',
        code: 'rain = input("雨？(yes/no): ")\nif not rain == "yes":\n    print("傘は不要")\nelse:\n    print("傘が必要")',
        explanation: 'notは「〜でない」という意味で、条件を反転させます。not rain == "yes"は「rainがyesではない」という意味です。rain != "yes"と同じ意味になります。'
    },
    {
        id: 10,
        title: '実践：成績判定プログラム',
        description: '複数のif-elif-else文を組み合わせて、詳しい成績判定をしてみましょう。',
        code: 'score = int(input("点数: "))\nif score >= 90:\n    grade = "S"\nelif score >= 80:\n    grade = "A"\nelif score >= 70:\n    grade = "B"\nelif score >= 60:\n    grade = "C"\nelse:\n    grade = "D"\nprint(grade)',
        explanation: '複数のelifを使って、点数に応じて5段階の評価をしています。このように、if文を組み合わせることで複雑な条件分岐を実現できます。'
    }
];
