import Layout from '../../layouts/Layout.astro';

const steps = [
    {
        id: 1,
        title: '配列(リスト)とは何か',
        description: '配列(リスト)は、複数のデータをまとめて扱うことができる便利な機能です。Pythonでは角括弧 [ ] を使って表現します。',
        code: '# リストの例\nfruits = ["りんご", "バナナ", "オレンジ"]\nprint(fruits)',
        explanation: 'リストを使うと、複数の値を1つの変数にまとめて保存できます。この例では"りんご"、"バナナ"、"オレンジ"という3つの文字列をfruitsという1つのリストに格納しています。'
    },
    {
        id: 2,
        title: 'リストの作り方',
        description: 'リストは角括弧 [ ] の中に、カンマ , で区切ってデータを並べることで作成できます。',
        code: '# 空のリスト\nempty_list = []\n\n# 数値のリスト\nnumbers = [10, 20, 30, 40, 50]\n\n# 文字列のリスト\ncolors = ["赤", "青", "黄色"]\n\nprint(numbers)\nprint(colors)',
        explanation: 'リストには数値、文字列、さらには他のリストなど、様々な種類のデータを入れることができます。空のリストも作成できます。'
    },
    {
        id: 3,
        title: 'リストの要素にアクセスする',
        description: 'リストの中の個別の要素には、インデックス(番号)を使ってアクセスできます。インデックスは0から始まります。',
        code: 'fruits = ["りんご", "バナナ", "オレンジ", "ぶどう"]\n\n# 最初の要素（インデックス0）\nprint(fruits[0])\n\n# 2番目の要素（インデックス1）\nprint(fruits[1])\n\n# 最後の要素（インデックス-1）\nprint(fruits[-1])',
        explanation: 'リスト名[インデックス]の形式で要素にアクセスできます。インデックスは0から始まるので、最初の要素は[0]です。マイナスの値を使うと、後ろから数えることができます（-1は最後の要素）。'
    },
    {
        id: 4,
        title: 'リストの要素を変更する',
        description: 'インデックスを指定して、リストの要素を変更することができます。',
        code: 'colors = ["赤", "青", "黄色"]\nprint("変更前:", colors)\n\n# 2番目の要素を変更\ncolors[1] = "緑"\nprint("変更後:", colors)',
        explanation: 'リスト[インデックス] = 新しい値の形式で、既存の要素を新しい値に置き換えることができます。この例では"青"を"緑"に変更しています。'
    },
    {
        id: 5,
        title: 'len関数でリストの長さを調べる',
        description: 'len()関数を使うと、リストに何個の要素が入っているかを調べることができます。',
        code: 'fruits = ["りんご", "バナナ", "オレンジ"]\nlength = len(fruits)\nprint("フルーツの数:", length)\n\nnumbers = [10, 20, 30, 40, 50]\nprint("数値の個数:", len(numbers))',
        explanation: 'len()関数はリストの要素数を返します。この関数はリスト以外にも、文字列の長さなどを調べるときにも使えます。'
    },
    {
        id: 6,
        title: 'リストに要素を追加する',
        description: 'append()メソッドを使うと、リストの最後に新しい要素を追加できます。',
        code: 'fruits = ["りんご", "バナナ"]\nprint("追加前:", fruits)\n\n# 要素を追加\nfruits.append("オレンジ")\nprint("追加後:", fruits)\n\nfruits.append("ぶどう")\nprint("さらに追加:", fruits)',
        explanation: 'リスト.append(追加したい値)の形式で、リストの最後に新しい要素を追加できます。何度でも追加できるので、リストを動的に拡張できます。'
    },
    {
        id: 7,
        title: 'リストとfor文の組み合わせ①',
        description: 'for文を使うと、リストの全ての要素に対して順番に処理を実行できます。',
        code: 'fruits = ["りんご", "バナナ", "オレンジ"]\n\n# リストの各要素を順番に表示\nfor fruit in fruits:\n    print(fruit + "が好きです")',
        explanation: 'for 変数名 in リスト名: の形式で、リストの要素を1つずつ取り出して処理できます。この例では、各フルーツに対して「○○が好きです」と表示しています。'
    },
    {
        id: 8,
        title: 'リストとfor文の組み合わせ②',
        description: 'range()関数とlen()関数を組み合わせて、インデックスを使った繰り返し処理もできます。',
        code: 'scores = [85, 92, 78, 95, 88]\n\nfor i in range(len(scores)):\n    print(f"{i+1}番目の点数: {scores[i]}点")',
        explanation: 'range(len(リスト))で0からリストの長さ-1までの数値を生成し、それをインデックスとして使用できます。この方法は、要素の位置(番号)も一緒に使いたい時に便利です。'
    },
    {
        id: 9,
        title: 'リストとwhile文の組み合わせ',
        description: 'while文でもリストの要素を処理できます。インデックスを使った方法を見てみましょう。',
        code: 'animals = ["犬", "猫", "うさぎ", "ハムスター"]\nindex = 0\n\nwhile index < len(animals):\n    print(f"{index+1}: {animals[index]}")\n    index += 1',
        explanation: 'while文では、インデックス用の変数を用意し、条件を満たす間繰り返します。index < len(animals)という条件で、リストの全要素を処理できます。ただし、リストの処理にはfor文を使う方が一般的で読みやすいです。'
    },
    {
        id: 10,
        title: '実践例：買い物リストの管理',
        description: 'これまで学んだことを使って、買い物リストを管理するプログラムを作ってみましょう。',
        code: '# 買い物リスト\nshopping_list = ["牛乳", "卵", "パン"]\n\nprint("=== 買い物リスト ===\")\nfor i in range(len(shopping_list)):\n    print(f"{i+1}. {shopping_list[i]}")\n\n# 新しい商品を追加\nshopping_list.append("バター")\nshopping_list.append("チーズ")\n\nprint("\\n=== 更新後のリスト ===\")\nfor i in range(len(shopping_list)):\n    print(f"{i+1}. {shopping_list[i]}")\n\nprint(f"\\n合計 {len(shopping_list)} 個の商品")',
        explanation: 'リスト、len()関数、append()メソッド、for文を組み合わせた実践的な例です。買い物リストに商品を追加し、番号付きで表示し、合計個数を表示しています。これらの機能を組み合わせることで、様々な便利なプログラムを作ることができます。'
    }
];
